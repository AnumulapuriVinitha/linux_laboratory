Q2: 
echo "enter the filename:"
read f
echo "enter the starting value:"
read s
echo "enter the ending value:"
read e
sed -n $s,$e\p $f

Q3:
echo "enter the word:"
ead word
for file in "$@"; do
if [-e "$file"]; then
grep -v "$word "$file > "$file.tmp" && mv "$file.tmp" "$file"
echo "Lines containing '$word' delted from $file"
else
echo " file not found"
fi
done

